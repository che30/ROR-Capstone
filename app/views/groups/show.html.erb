<div class="d-flex align-items-center justify-content-start align-items-center">
  <p>  <%= render 'shared/drop_down' %></p>
    <h1 class="text-center text-white mx-auto h-t-w">group details</h1>
  </div>
<section class=" border bg-white p-b-s">
 <div class="border py-3">
  <div class="d-flex justify-content-between">
    <div><img src="<%=@group.icon%>" alt="" class="w-50 border">
    </div>
    <div ><span>Group name <br><%=@group.name%></span>
    </div>
