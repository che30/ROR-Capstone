    <div class="mr-3">
 <span> <%=@group.created_at.strftime('%d %b %Y at %l:%M%P')%></span>
    </div>
  </div>
  <div class="d-flex justify-content-between  py-3">
    <div class="amount ml-2">
      <span > TOTAL AMOUNT</span>
    </div>
    <div class="mr-3"> <span class="font-weight-bold mr-5 pr-3">$<%= number_with_precision(@transactions.sum(:amount), :precision => 2) %>
    </div>
  </div>
</div>
</section>
<div class="bg-success py-3">
  <%= link_to 'new group' , new_group_path, class:'btn btn-transact text-white border w-50 py-3 ' %>
</div>
