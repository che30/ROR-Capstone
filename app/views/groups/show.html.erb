    <% if !@transactions.blank? %>
    <span> Creator <br><%=@transactions.first.user.username%></span>
  <% end %>
  </div>
  
  </div>
  <div class="transaction-id-info  d-flex justify-content-between py-3">
    <div class="ml-2">
      <span> Group No.<%=@group.id%></span>
