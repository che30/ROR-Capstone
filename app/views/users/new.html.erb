<%= form_with model: @user,class: 'form-horizontal',html: { multipart: true } do |f| %>
   <div class="form-group">
     <%= f.label :username,class:'col-md-4 control-label' %>
   <div class="col-md-6">
    <%= f.text_field :username,class:'form-control' %></div>
   </div>
 <div class="form-group">
    <%= f.label :avatar,class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <%= f.file_field :avatar,class: 'form-control' %>
  </div>
  </div>
   <div class="form-group">
   <div class="col-md-6 col-md-offset-4">
     <%= f.submit %>
   </div>
  </div>
<% end %>