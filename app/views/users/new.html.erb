<div class="d-flex justify-content-between align-items-center">
  <p class="text-white mx-auto pl-5">NEW USER</p>
  <div><%= render 'shared/sign_in_signup' %></div>
 </div>
<div class="bg-white user-new-padding mx-auto">
    <%= form_with model: @user,class: 'form-horizontal text-center ' ,html: { multipart: true } do |f| %>
       <div class="w-75 mx-auto"><%= render "shared/username",f: f %></div>
      <div class="form-group w-75 mx-auto">
        <%= f.label :avatar,class: 'col-md-4 control-label' %>
          <div>
            <%= f.file_field :avatar,class: 'form-control' %>
          </div>
      </div>
      <div class="form-group">
        <div>
          <%= f.submit class: "btn btn-primary my-4 mx-auto d-block py-2 px-5" %>
          <p class=" w-75 mx-auto"><%=display_errors(@user)%></p>
        </div>
      </div>
      <% end %>
      
</div>