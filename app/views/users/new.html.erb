<div class="bg-white user-new-padding">
  <% content_for :title, "New User" %>
    <%= form_with model: @user,class: 'form-horizontal text-center' ,html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :username,class:'col-md-4 control-label' %>
          <div>
            <%= f.text_field :username,class:'form-control' %>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :avatar,class: 'col-md-4 control-label' %>
          <div>
            <%= f.file_field :avatar,class: 'form-control' %>
          </div>
      </div>
      <div class="form-group">
        <div>
          <%= f.submit class: "btn btn-primary my-4 mx-auto d-block py-2 px-5" %>
        </div>
      </div>
      <% end %>
</div>