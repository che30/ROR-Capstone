<% content_for :title, "ALL Transactions" %>
 <%= render 'shared/drop_down' %>
<div class="bg-light-white">
<h2 class="d-flex justify-content-between bg-white">
  <div >
  <span class="font-nova-light">  Total amount</span>
  </div>
  <div class="font-nova-bold">
    $<%=sum_amount(@transactions)%>
  </div>
</h2>
<% @transactions.each do |transaction| %>
<%= link_to(transaction_url(transaction.id), class: "text-decoration-none text-dark") do %>
  <section class="d-flex justify-content-between border py-3 mx-2 my-3 bg-white">
    <div class="d-flex">
      <div class="border"><img src="<%=transaction.group.icon%>" alt="" class="w-75 pl-4 "></div>
      <div class="d-flex flex-column justify-content-between ml-3">
        <div>
          <span>
            <%=transaction.name%>
          </span>
        </div>
        <div>
          <span class="font-nova-light">
            <%=transaction.created_at.strftime('%d %b %Y at %l:%M%P')%>
          </span>
        </div>
      </div>
    </div>
    <div class="font-nova-bold">$<%=transaction.amount%>
    </div>
  </section>
  <% end %>
  <% end %>
  
  <div class="bg-success py-3">
    <%= link_to 'new transaction' , new_transaction_path, class:'btn btn-transact text-white border w-50 py-3 ' %>
  </div>
 
      </div>
