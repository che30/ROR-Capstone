<div class="bg-white transaction-new-padding">
  <% content_for :title, "New Transaction" %>

    <%= form_with model: @transaction,class: 'form-horizontal text-center' do |f| %>
      <div class="form-group mt-0">

        <%= f.text_field :name,class:'form-control',placeholder: "name" %>
      </div>
      <div class="input-group my-5">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>

        <%= f.number_field :amount,class: 'form-control' ,placeholder: "Amount" %>
      </div>

      <div class="form-group">
        <%= collection_select(:transaction, :group_id, Group.all, :id, :name, { :prompt=> 'Group' }, class:
          "form-control my-3 " )%>
      </div>

</div>
<div class="form-group">
  <div class=" ">
    <%= f.submit class: "btn btn-primary my-4 mx-auto d-block" %>
  </div>
</div>

<%= render partial: 'errors' %>

  <% end %>
    </div>
    </div>