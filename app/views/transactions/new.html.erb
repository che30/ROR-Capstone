<div class="d-flex align-items-center justify-content-start">
  <p>  <%= render 'shared/drop_down' %></p>
    <h1 class="text-center text-white mx-auto h-t-w">New Transaction</h1>
  </div>
<div class="bg-white transaction-new-padding mx-auto">
    <%= form_with model: @transaction,class: 'form-horizontal text-center' do |f| %>
      <div class="form-group pt-5 w-75 mx-auto">

        <%= f.text_field :name,class:'form-control ',placeholder: "name" %>
      </div>
      <div class="input-group my-5 w-75 mx-auto">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <%= f.number_field :amount,class: 'form-control ' ,placeholder: "Amount" %>
      </div>

      <div class="form-group w-75 mx-auto">
        <%= collection_select(:transaction, :group_id, Group.all, :id, :name, { :prompt=> 'Group' }, class:
          "form-control my-3  " )%>
      </div>


<div class="form-group">
  <div class=" bg-white py-1" data-turbolinks="false">
    <%= f.submit class: "btn btn-primary my-4 mx-auto d-block px-3" %>
    <p class=" w-75 mx-auto"><%=display_errors(@transaction)%></p>
  </div>
</div>
</div>

  <% end %>