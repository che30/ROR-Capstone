<%= form_with model: @transaction,class: 'form-horizontal' do |f| %>
   <div class="form-group">
     <%= f.label :name,class:'col-md-4 control-label' %>
   <div class="col-md-6">
    <%= f.text_field :name,class:'form-control' %></div>
   </div>
 <div class="form-group">
    <%= f.label :amount,class: 'col-md-4 control-label' %>
  <div class="col-md-6">
    <%= f.number_field :amount,class: 'form-control' %>
  </div>
  </div>
  
   <div class="form-group">
    <%= f.label :group,class: 'col-md-4 control-label' %><br>
    <div class="col-md-6 ">
      <%= collection_select(:transaction, :group_id, Group.all, :id, :name, { :prompt => 'Group' }, class: "form-control my-3 " )%>
    </div>

  </div>
   <div class="form-group">
   <div class="col-md-6 col-md-offset-4">
     <%= f.submit %>
   </div>
  </div>
  <%= render  partial: 'errors' %>
<% end %>