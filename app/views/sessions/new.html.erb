
<% if !current_user %>
<div class="mt-5">
 <%= form_with(url: login_path, scope:
:session, local: true) do |f| %>
   <div class="form-group">
     <%= f.label :username,class:'col-md-4 control-label' %>
   <div class="col-md-6">
    <%= f.text_field :username,class:'form-control' %></div>
   </div>
  </div>
   <div class="form-group">
   <div class="col-md-6 col-md-offset-4">
    <%= f.submit "Log in", class:"btn btn-primary" %>
   </div>
  </div>
</div>
<% end %>
<% end %>