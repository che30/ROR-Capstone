 <div class="d-flex justify-content-between align-items-center align-content-center">
  <h1 class="text-white mx-auto pl-5 h-t-w">LOGIN</h1>
  <div><%= render 'shared/sign_in_signup' %></div>
 </div>
  <div class="bg-white user-new-padding">
    <% if !current_user %>
      <div class="mt-5">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= render "shared/username",f: f %>
    </div>
  <div class="form-group" >
    <%= f.submit "Log in" , class:"btn btn-primary my-4 mx-auto d-block px-5 py-2" %>
  </div>
  <div class="text-white text-center "><%= flash_message %></div>
  </div>

  <% end %>
    <% else %>
      <ul class="list-unstyled">
        <li>
          <%= link_to 'All my transactions' ,transactions_path %>
        </li>
        <li>
          <%= link_to 'All my external transactions' %>
        </li>
        <li>
          <%= link_to 'All groups' ,groups_path%>
        </li>
        <li></li>
      </ul>
      <% end %>